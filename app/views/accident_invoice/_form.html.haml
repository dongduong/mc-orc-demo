.col-md-6.col-md-offset-3.col-sm-10.col-sm-offset-1
  .invoice-form
    .form-body
      = simple_form_for @invoice, url: accident_invoice_index_path, method: :post do |f|
        = f.file_field :invoice_file, as: :file, label: 'File', input_html: { class: 'form-control' }
        %br
        = f.submit 'Save', class: 'btn'
        = link_to 'Cancel', accident_invoice_index_path, class: 'btn'
